rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Events collection - only authenticated users can read/write
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
    
    // News collection - only authenticated users can write, anyone can read published
    match /news/{newsId} {
      allow read: if resource.data.published == true || request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Posts collection - only authenticated users can write, anyone can read published
    match /posts/{postId} {
      allow read: if resource.data.published == true || request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Admin users collection - only authenticated admins
    match /admin_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}